<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
   android:padding="20dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/list_item_display_deleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:src="@drawable/delete" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_display_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:10"
                android:textColor="@color/white"
                android:textSize="56sp" />

            <TextView
                android:id="@+id/list_item_display_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="上午"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/list_item_display_tips_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闹钟"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_999999"
                android:textSize="26sp" />

            <TextView
                android:layout_width="0.5px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black_666666" />

            <TextView
                android:id="@+id/list_item_display_tips_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="每天"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_555555"
                android:textSize="26sp" />

            <TextView
                android:layout_width="0.5px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black_666666" />

            <TextView
                android:id="@+id/list_item_display_tips_when_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="8小时后响铃"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_999999"
                android:textSize="26sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <ToggleButton
            android:id="@+id/list_item_display_toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/toggle_button_bg"
            android:gravity="center"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null" />

    </LinearLayout>


</LinearLayout>